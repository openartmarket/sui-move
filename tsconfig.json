{
  "compilerOptions": {
    "rootDirs": [
      ".",
    ],
    "outDir": "dist",
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "es2020",
    ],
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "pretty": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": ["src/**/*", "test/**/*", "scripts/**/*"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "esm": true,
  }
}
