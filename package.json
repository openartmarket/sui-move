{
  "name": "@openartmarket/sui",
  "repository": "git://github.com/openartmarket/sui-move.git",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "version": "1.0.0",
  "description": "PoC contracts modeling Open Art Market use case (https://www.openartmarket.com/)",
  "main": "src/index.js",
  
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf ~/.sui",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --build tsconfig.cjs.json",
    "build:esm": "tsc --build tsconfig.esm.json",
    "format": "prettier-eslint --write '{src,test}/**/*.{ts,d.ts}'",
    "lint": "eslint --ext ts --fix --max-warnings 0 '{src,test}/**/*.{ts,d.ts}'",
    "start": "npm run clean && npm run build && npm run start-node",
    "start-node": "sui start",
    "test": "mocha test",
    "create:contract-display": "tsc && node dist/cjs/contract_display",
    "create:contract-stock-display": "tsc && node dist/cjs/contract_stock_display",
    "create:ci-contract-display": "tsc && node dist/contract_display",
    "create:ci-contract-stock-display": "tsc && node dist/contract_stock_display",
    "postinstall": "npm run build",
    "upgrade": "npm-check-updates --upgrade"
  },
  "devDependencies": {
    "@mysten/bcs": "0.7.2",
    "@mysten/sui.js": "0.36.0",
    "@types/jest": "29.5.3",
    "@types/mocha": "10.0.1",
    "@types/node": "20.4.4",
    "@typescript-eslint/eslint-plugin": "5.59.11",
    "dotenv": "16.1.4",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "mocha": "10.2.0",
    "npm-check-updates": "16.10.12",
    "prettier": "2.8.8",
    "prettier-eslint-cli": "7.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.3"
  }
}
