{
	"name": "@openartmarket/sui",
	"version": "0.3.0",
	"description": "Contracts for Open Art Market (https://www.openartmarket.com/)",
	"author": {
		"name": "Open Art Market",
		"email": "hi@openartmarket.com",
		"url": "https://github.com/openartmarket/sui-move"
	},
	"files": [
		"./dist"
	],
	"type": "module",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"test": "vitest run --coverage",
		"compile": "tsc --build",
		"build": "tsup",
		"upgrade": "npm-check-updates --upgrade",
		"check": "npx @biomejs/biome check --write src test"
	},
	"repository": "openartmarket/sui-move",
	"license": "MIT",
	"dependencies": {
		"@mysten/bcs": "1.5.0",
    "@mysten/sui": "1.24.0",
		"@shinami/clients": "0.9.5"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "22.13.11",
		"@vitest/coverage-v8": "3.0.9",
		"@vitest/ui": "3.0.9",
		"eslint": "9.23.0",
		"npm-check-updates": "17.1.16",
		"prettier": "3.5.3",
		"tsup": "8.4.0",
		"tsx": "4.19.3",
		"typescript": "5.8.2",
		"vite": "6.2.2",
		"vitest": "3.0.9"
	},
	"tsup": {
		"dts": true,
		"entryPoints": [
			"src/index.ts"
		],
		"external": [
			"@mysten/bcs",
			"@mysten/sui",
      "@shinami/clients"
		],
		"format": [
			"esm"
		],
		"sourcemap": true,
		"splitting": false,
		"bundle": true,
		"clean": true
	}
}
