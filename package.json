{
  "name": "@openartmarket/sui",
  "repository": "git://github.com/openartmarket/sui-move.git",
  "keywords": [],
  "author": "Open Art Market",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Contracts for Open Art Market (https://www.openartmarket.com/)",
  "main": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "compile": "npm run compile:cjs && npm run compile:esm",
    "compile:cjs": "tsc --build tsconfig.cjs.json",
    "compile:esm": "tsc --build tsconfig.esm.json",
    "clean": "rm -rf ~/.sui",
    "deploy-contracts": "./scripts/publish-contracts.sh",
    "format": "prettier --write '{src,test,scripts}/**/*.{ts,d.ts}'",
    "lint": "eslint --ext ts --fix --max-warnings 0 '{src,test,scripts}/**/*.{ts,d.ts}'",
    "postinstall": "npm run compile",
    "setup-local": "./scripts/setup-local-node.sh",
    "start": "npm run clean && npm run compile && npm run start-node",
    "start-node": "sui start",
    "test": "mocha test",
    "upgrade": "npm-check-updates --upgrade"
  },
  "devDependencies": {
    "@mysten/bcs": "0.7.3",
    "@mysten/sui.js": "0.41.1",
    "@types/mocha": "10.0.1",
    "@types/node": "20.5.9",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "eslint": "8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "mocha": "10.2.0",
    "npm-check-updates": "16.13.2",
    "prettier": "3.0.3",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  }
}
